

.rich-link {
	display: grid;
	grid-gap: 30px;

	padding: 30px;

	background-color: rgba(255, 255, 255, .1);
	border-radius: 10px;

	box-shadow: 0 0 29px rgba(0, 0, 0, .5);

	@media all and (min-width: 550px) {
		grid-template-columns: 100px 1fr;
	}

	&__logo {
		width: 100%;
		max-width: 150px;
	}
}