/*
Specify all the typographic styles that are going to be reused.
*/

html {
	font-family: $font-2-family;
	font-weight: $font-2-regular;
	font-size: 20px;

	@media all and (min-width: 600px) {
		font-size: 22px;
	}
}

// Helper for each font used on the website. Use these only when a .t-# style doesnâ€™t fit
.f-1 {
	font-family: $font-1-family;
	font-weight: $font-1-regular;
}

.f-2 {
	font-family: $font-2-family;
	font-weight: $font-2-regular;
}

.f-3 {
	font-family: $font-3-family;
	font-weight: $font-3-bold;
}

/*
Type styles for all major reusable typographic elements.
If type is very context reliant for styling such as heroes that scale a lot with
the screen size then create their styles within the block itself
*/
.t {
	&-1 {
		font-family: $font-1-family;
		font-size: 50px;
		font-weight: $font-1-regular;
		line-height: 1.09;

		@media all and (min-width: 500px) {
			font-size: 60px;
		}

		@media all and (min-width: 700px) {
			font-size: 80px;
		}
	}

	&-2 {
		font-family: $font-1-family;
		font-size: 40px;
		font-weight: $font-1-regular;
		line-height: 1.09;

		@media all and (min-width: 600px) {
			font-size: 10vw;
		}

		@media all and (min-width: 1000px) {
			font-size: 70px;
		}
	}

	&-3 {
		font-family: $font-1-family;
		font-size: 28px;
		font-weight: $font-1-regular;
		letter-spacing: .06ch;
		line-height: 1.2;

		@media all and (min-width: 600px) {
			font-size: 38px;
		}
	}

	&-4 {
		font-family: $font-2-family;
		font-size: 22px;
		font-weight: $font-2-regular;
		line-height: 1.4;

		@media all and (min-width: 600px) {
			font-size: 28px;
		}
	}

	&-5 {
		font-family: $font-2-family;
		font-size: 18px;
		font-weight: $font-2-regular;
		line-height: 1.2;
	}

	&-6 {
		font-family: $font-2-family;
		font-size: 14px;
		font-weight: $font-2-regular;
		line-height: 1.2;
	}
}